@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/SignUp.css" />
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng kí</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="FormSignOut">
        <div class="register-container">
            <h2>Đăng kí</h2>
            <form action="#" method="post">
                <label for="email">Tài khoản hoặc Email</label>
                <input type="text" id="email" name="email" required>

                <label for="phone">Số điện thoại</label>
                <input type="text" id="phone" name="phone" required>

                <label for="password">Mật khẩu</label>
                <input type="password" id="password" name="password" required>

                <label for="confirm-password">Nhập lại</label>
                <input type="password" id="confirm-password" name="confirm-password" required>

                <button type="submit" class="register-button">Đăng kí</button>
            </form>
            <p class="login-link">Tài khoản đã tồn tại? <a href="@Url.Action("SignIn", "Articles")">Đăng nhập</a></p>
        </div>
    </div>
</body>
</html>